{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "noEmit": true, // Enable importing TypeScript files with .ts/.tsx extensions
    "target": "esnext",
    "module": "node16",
    "moduleResolution": "node16",
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
